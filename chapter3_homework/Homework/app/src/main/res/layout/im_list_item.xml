<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    tools:background="#ffffff"
    android:background="#ffffff">

    <FrameLayout
        android:id="@+id/iv_avatar_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        >

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            />
    </FrameLayout>


    <!-- toRightOf 在X的右边-->
    <TextView
        android:id="@+id/txt_aName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_avatar_header"
        android:textColor="#000000"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/txt_aSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_aName"
        android:layout_alignLeft="@id/txt_aName"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:textColor="#4c000000"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/txt_aTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#4c000000"
        android:textSize="12sp"
        />
</RelativeLayout>